class Board {
	private char[] board;
	private int    dim;
	
	Board(int dim) { 
		this.dim = dim;
		board = new char[dim * dim];
	}
	
	void set(int idx, char val) {
		board[idx] = val;
	}
	
	void draw() {
		int last = dim - 1;
		
		for(int row = 0; row < last; row++) {
			for(int col = 0; col < last; col++) {
				System.out.print(board[row * dim + col] + "|");
			}
			System.out.print(board[row * dim + col]);
			
		for(int i = 0; i < dim; i++)
			System.out.println('-');
		}
	}
	
	static void test() {
		Board board = new Board(2);
		board.set(0, 'X');
		board.set(1, 'O');
		board.set(2, 'X');
		board.set(3, 'O');
		board.draw();
	}
}

public class TicTacToe {
	public static void main(String[] args) {
		Board.test();
	}
}
